{
  "name": "407d38e8-3a18-4ea7-81a4-f856898fba7a",
  "type": "Microsoft.Authorization/policyDefinitions",
  "properties": {
    "displayName": "Storage Accounts - Block deletion",
    "description": "Prevents deletion of all Storage Accounts directly and as a result of the Resource Group being deleted, if Cascade is denied",
    "metadata": {
      "category": "Storage",
      "version": "1.0.0"
    },
    "mode": "Indexed",
    "parameters": {
      "effect": {
        "type": "String",
        "metadata": {
          "displayName": "Effect",
          "description": "Enable or disable the execution of the policy"
        },
        "allowedValues": [
          "DenyAction",
          "Disabled"
        ],
        "defaultValue": "Disabled"
      },
      "cascade": {
        "type": "String",
        "metadata": {
          "displayName": "Cascade",
          "description": "Allow or deny the deletion of the storage account along with the resource group"
        },
        "allowedValues": [
          "deny",
          "allow"
        ],
        "defaultValue": "allow"
      }
    },
    "policyRule": {
      "if": {
        "field": "type",
        "equals": "Microsoft.Storage/storageAccounts"
      },
      "then": {
        "effect": "[parameters('effect')]",
        "details": {
          "actionNames": [
            "delete"
          ],
          "cascadeBehaviors": {
            "resourceGroup": "[parameters('cascade')]"
          }
        }
      }
    }
  }
}
