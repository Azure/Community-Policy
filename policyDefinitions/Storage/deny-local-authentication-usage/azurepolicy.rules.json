        "field": "Microsoft.Storage/storageAccounts/allowSharedKeyAccess",
        "equals": true
      },
      {
        "field": "Microsoft.Storage/storageAccounts/allowBlobPublicAccess",
        "equals": true
      },
      {
        "field": "Microsoft.Storage/storageAccounts/defaultToOAuthAuthentication",
        "equals": false
      }
    ]
  },
