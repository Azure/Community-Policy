{
  "if": {
    "field": "type",
    "in": [
      "AKS Engine",
      "Microsoft.Kubernetes/connectedClusters",
      "Microsoft.ContainerService/managedClusters"
    ]
  },
  "then": {
    "effect": "[parameters('effect')]",
    "details": {
      "constraintTemplate": "https://raw.githubusercontent.com/Azure/Community-Policy/master/Policies/Kubernetes/host-network-ports/template.yaml",
      "constraint": "https://raw.githubusercontent.com/Azure/Community-Policy/master/Policies/Kubernetes/host-network-ports/constraint.yaml",
      "values": {
        "excludedNamespaces": "[parameters('excludedNamespaces')]",
        "allowHostNetwork": "[parameters('allowHostNetwork')]",
        "minPort": "[parameters('minPort')]",
        "maxPort": "[parameters('maxPort')]"
      }
    }
  }
}
