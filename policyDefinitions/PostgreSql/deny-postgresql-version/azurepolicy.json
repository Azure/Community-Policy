{
  "name": "d78f353a-a5e7-4747-8d31-62f361bafac5",
  "type": "Microsoft.Authorization/policyDefinitions",
  "properties": {
    "displayName": "PostgreSQL database servers - Allow certain version(s)",
    "description": "Azure Database for PostgreSQL supports multiple Postgres version(s), This policy will only allow set version(s).",
    "metadata": {
      "version": "1.0.0",
      "category": "PostgreSql"
    },
    "mode": "Indexed",
    "parameters": {
      "effect": {
        "type": "String",
        "defaultValue": "Deny",
        "allowedValues": [
          "Audit",
          "Disabled",
          "Deny"
        ],
        "metadata": {
          "displayName": "Effect",
          "description": "Enable or disable the execution of the policy"
        }
      },
      "allowedVersions": {
        "type": "array",
        "defaultValue": [
          "15",
          "16",
          "17"
        ],
        "metadata": {
          "displayName": "Postgres Version",
          "description": "Array of Postgres Server Versions allowed"
        }
      }
    },
    "policyRule": {
      "if": {
        "allOf": [
          {
            "field": "type",
            "equals": "Microsoft.DBforPostgreSQL/flexibleServers"
          },
          {
            "value": "[contains(parameters('allowedVersions'),field('Microsoft.DBForPostgreSql/flexibleServers/version'))]",
            "notEquals": "true"
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]"
      }
    }
  }
}