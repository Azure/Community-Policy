{
  "name": "c7eedeb9-bf27-40fa-91ce-4ccb1ae35edc",
  "type": "Microsoft.Authorization/policyDefinitions",
  "properties": {
    "displayName": "Deny change of retention days in Log Analytics workspace",
    "description": "Deny change of retention days to a lower amount of days than the threshold for Log Analytics workspaces.",
    "metadata": {
      "version": "1.0.0",
      "category": "Monitoring"
    },
    "mode": "All",
    "parameters": {
      "retentionInDays": {
        "type": "Integer",
        "metadata": {
          "displayName": "retentionInDays",
          "description": "retentionInDays"
        },
        "defaultValue": 179
      },
      "effect": {
        "type": "String",
        "metadata": {
          "displayName": "Effect",
          "description": "Deny, Audit or Disabled the execution of the Policy"
        },
        "allowedValues": [
          "Deny",
          "Audit",
          "Disabled"
        ],
        "defaultValue": "Audit"
      }
    },
    "policyRule": {
      "if": {
        "allOf": [
          {
            "field": "type",
            "equals": "Microsoft.OperationalInsights/workspaces"
          },
          {
            "field": "Microsoft.OperationalInsights/workspaces/retentionInDays",
            "lessOrEquals": "[parameters('retentionInDays')]"
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]"
      }
    }
  }
}
