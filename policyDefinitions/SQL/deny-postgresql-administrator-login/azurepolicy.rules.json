{
  "if": {
    "allOf": [
      {
        "field": "type",
        "equals": "Microsoft.DBforPostgreSQL/flexibleServers"
      },
      {
        "anyOf": [
          {
            "field": "Microsoft.DBForPostgreSql/flexibleServers/authConfig.passwordAuth",
            "equals": "Enabled"
          },
          {
            "allOf": [
              {
                "field": "Microsoft.DBForPostgreSql/flexibleServers/administratorLogin",
                "exists": "true"
              },
              {
                "value": "empty(field(Microsoft.DBForPostgreSql/flexibleServers/administratorLogin))",
                "notEquals": "true"
              }
            ]
          },
          {
            "allOf": [
              {
                "field": "Microsoft.DBForPostgreSql/flexibleServers/administratorLoginPassword",
                "exists": "true"
              },
              {
                "value": "empty(field(Microsoft.DBForPostgreSql/flexibleServers/administratorLoginPassword))",
                "notEquals": "true"
              }
            ]
          }
        ]
      }
    ]
  },
  "then": {
    "effect": "[parameters('effect')]"
  }
}