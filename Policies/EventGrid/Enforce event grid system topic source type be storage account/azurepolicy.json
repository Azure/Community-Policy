{
  "name": "473e6aa0-7f42-41fa-8e8f-433840ca66e8",
  "type": "Microsoft.Authorization/policyDefinitions",
  "properties": {
    "displayName": "Enforce event grid system topic source type be storage account",
    "mode": "indexed",
    "description": "Policy description.",
    "metaData": {
      "category": "EventGrid",
      "version": "1.0.0"
    },
    "parameters": {
      "effect": {
        "type": "String",
        "metadata": {
          "description": "Enable or disable the execution of the policy",
          "displayName": "Effect"
        },
        "allowedValues": [
          "Audit",
          "Deny",
          "Disabled"
        ],
        "defaultValue": "Deny"
      }
    },
    "policyRule": {
      "if": {
        "allOf": [
          {
            "equals": "Microsoft.EventGrid/systemTopics",
            "field": "type"
          },
          {
            "field": "Microsoft.EventGrid/systemTopics/topicType",
            "notequals": "Microsoft.Storage.StorageAccounts"
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]"
      }
    }
  }
}
