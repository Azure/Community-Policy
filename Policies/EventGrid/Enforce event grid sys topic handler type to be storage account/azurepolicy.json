{
  "name": "4de70ff5-908f-4737-8545-2fa3715b2f65",
  "type": "Microsoft.Authorization/policyDefinitions",
  "properties": {
    "displayName": "Enforce event grid sys topic handler type to be storage account",
    "mode": "indexed",
    "description": "Policy description.",
    "metaData": {
      "category": "EventGrid",
      "version": "1.0.0"
    },
    "parameters": {
      "effect": {
        "type": "String",
        "metadata": {
          "description": "Enable or disable the execution of the policy",
          "displayName": "Effect"
        },
        "allowedValues": [
          "Audit",
          "Deny",
          "Disabled"
        ],
        "defaultValue": "Deny"
      }
    },
    "policyRule": {
      "if": {
        "allOf": [
          {
            "equals": "Microsoft.EventGrid/systemTopics/eventSubscriptions",
            "field": "type"
          },
          {
            "field": "Microsoft.EventGrid/systemTopics/eventSubscriptions/destination.endpointType",
            "notequals": "StorageQueue"
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]"
      }
    }
  }
}
