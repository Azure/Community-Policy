{
  "name": "4e7a1b35-f77e-4cb3-be4b-6fc797621ddf",
  "type": "Microsoft.Authorization/policyDefinitions",
  "properties": {
    "displayName": "Deny deletion of storage account",
    "mode": "Indexed",
    "description": "Policy description.",
    "metaData": {
      "version": "1.0.0",
      "category": "Storage"
    },
    "parameters": {
      "effect": {
        "allowedValues": [
          "DenyAction",
          "Disabled"
        ],
        "defaultValue": "DenyAction",
        "type": "string",
        "metaData": {
          "description": "DenyAction or Disable the execution of the Policy",
          "displayName": "Policy effect"
        }
      }
    },
    "policyRule": {
      "if": {
        "field": "type",
        "equals": "Microsoft.Storage/storageAccounts"
      },
      "then": {
        "effect": "[parameters('effect')]",
        "details": {
          "actionNames": [
            "delete"
          ]
        }
      }
    }
  }
}
