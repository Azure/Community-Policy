{
  "effect": {
    "type": "String",
    "metadata": {
      "description": "The effect determines what happens when the policy rule is evaluated to match",
      "displayName": "Effect"
    },
    "allowedValues": [
      "Audit",
      "Deny",
      "Disabled"
    ],
    "defaultValue": "Deny"
  },
  "tlsVersion": {
    "type": "String",
    "metadata": {
      "description": "The TLS version to require",
      "displayName": "TLS Version"
    },
    "allowedValues": [
      "TLS1_0",
      "TLS1_1",
      "TLS1_2"
    ],
    "defaultValue": "TLS1_2"
  }
}
