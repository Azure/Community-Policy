{
  "name": "d593f5e8-2497-4e52-aa1f-d54a9230570b",
  "type": "Microsoft.Authorization/policyDefinitions",
  "properties": {
    "displayName": "storage-account-access-tier",
    "mode": "All",
    "description": "Policy description.",
    "metaData": {
      "category": "Storage",
      "version": "1.0.0"
    },
    "parameters": {
      "effect": {
        "allowedValues": [
          "Deny",
          "Audit",
          "Disabled"
        ],
        "defaultValue": "Deny",
        "type": "string",
        "metaData": {
          "description": "Deny, Audit or Disable the execution of the Policy",
          "displayName": "Policy effect"
        }
      }
    },
    "policyRule": {
      "if": {
        "allOf": [
          {
            "field": "type",
            "equals": "Microsoft.Storage/storageAccounts"
          },
          {
            "field": "kind",
            "in": [
              "BlobStorage",
              "StorageV2"
            ]
          },
          {
            "field": "Microsoft.Storage/storageAccounts/accessTier",
            "equals": "cool"
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]"
      }
    }
  }
}
