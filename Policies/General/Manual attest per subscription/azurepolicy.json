    "mode": "All",
    "description": "Policy description.",
    "metaData": {
      "category": "General",
      "version": "1.0.0"
    },
    "parameters": {
      "effect": {
        "allowedValues": [
          "Manual",
          "Disabled"
        ],
        "defaultValue": "Manual",
        "type": "string",
        "metaData": {
          "description": "Manual or Disable the execution of the Policy",
          "displayName": "Policy effect"
        }
      }
    },
    "policyRule": {
      "if": {
        "field": "type",
        "equals": "Microsoft.Resources/subscriptions"
      },
      "then": {
        "effect": "[parameters('effect')]",
        "details": {
          "defaultState": "Unknown"
        }
      }
    }
  }
}
