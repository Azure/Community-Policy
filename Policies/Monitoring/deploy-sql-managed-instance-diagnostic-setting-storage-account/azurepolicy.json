{
  "name": "4cdfc1ce-ec70-4291-ad3d-5adf808d9f55",
  "type": "Microsoft.Authorization/policyDefinitions",
  "properties": {
    "displayName": "Deploy SQL Managed Instance Diagnostic Setting - Storage Account",
    "mode": "all",
    "description": "This policy automatically deploys and enable diagnostic settings for SQL MI to a Storage Account",
    "metaData": {
      "category": "Monitoring",
      "version": "1.0.0"
    },
    "parameters": {
      "storageAccountId": {
        "type": "string",
        "metadata": {
          "displayName": "Storage Account ID",
          "description": "The resource ID of the storage account to which you would like to send Diagnostic Logs."
        }
      },
      "retentionDays": {
        "type": "string",
        "metadata": {
          "displayName": "Number of days to retain logs",
          "description": "Retention policy ranges from 1 to 365 days. If you do not want to apply any retention policy and retain data forever, set retention (days) to 0."
        }
      },
      "effect": {
        "allowedValues": [
          "DeployIfNotExists",
          "AuditIfNotExists",
          "Disabled"
        ],
        "defaultValue": "DeployIfNotExists",
        "type": "string",
        "metaData": {
          "description": "DeployIfNotExists, AuditIfNotExists or Disable the execution of the Policy",
          "displayName": "Policy effect"
        }
      }
    },
    "policyRule": {
      "if": {
        "field": "type",
        "equals": "Microsoft.Sql/managedInstances"
      },
      "then": {
        "effect": "[parameters('effect')]",
        "details": {
          "type": "Microsoft.Insights/diagnosticSettings",
          "roleDefinitionIds": [
            "/providers/Microsoft.Authorization/roleDefinitions/b24988ac-6180-42a0-ab88-20f7382dd24c"
          ],
          "existenceCondition": {
            "allOf": [
              {
                "field": "Microsoft.Insights/diagnosticSettings/logs.enabled",
                "equals": "True"
              },
              {
                "field": "Microsoft.Insights/diagnosticSettings/metrics.enabled",
                "equals": "True"
              },
              {
                "field": "Microsoft.Insights/diagnosticSettings/storageAccountId",
                "matchInsensitively": "[parameters('storageAccountId')]"
              }
            ]
          },
          "deployment": {
            "properties": {
              "mode": "incremental",
              "template": {
                "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
                "contentVersion": "1.0.0.0",
                "parameters": {
                  "resourceName": {
                    "type": "string"
                  },
                  "storageAccountId": {
                    "type": "string"
                  },
                  "location": {
                    "type": "string"
                  },
                  "retentionDays": {
                    "type": "string"
                  }
                },
                "variables": {},
                "resources": [
                  {
                    "type": "Microsoft.Sql/managedInstances/providers/diagnosticSettings",
                    "apiVersion": "2017-05-01-preview",
                    "name": "[concat(parameters('resourceName'), '/', 'Microsoft.Insights/setByPolicy')]",
                    "location": "[parameters('location')]",
                    "dependsOn": [],
                    "properties": {
                      "storageAccountId": "[parameters('storageAccountId')]",
                      "logs": [
                        {
                          "category": "ResourceUsageStats",
                          "enabled": true,
                          "retentionPolicy": {
                            "enabled": true,
                            "days": "[parameters('retentionDays')]"
                          }
                        },
                        {
                          "category": "SQLSecurityAuditEvents",
                          "enabled": true,
                          "retentionPolicy": {
                            "enabled": true,
                            "days": "[parameters('retentionDays')]"
                          }
                        }
                      ]
                    }
                  }
                ],
                "outputs": {}
              },
              "parameters": {
                "storageAccountId": {
                  "value": "[parameters('storageAccountId')]"
                },
                "location": {
                  "value": "[field('location')]"
                },
                "resourceName": {
                  "value": "[field('name')]"
                },
                "retentionDays": {
                  "value": "[parameters('retentionDays')]"
                }
              }
            }
          }
        }
      }
    }
  }
}
