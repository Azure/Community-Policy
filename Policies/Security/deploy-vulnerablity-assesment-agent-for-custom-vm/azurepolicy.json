{
  "name": "27828042-c1f2-4f95-9ecb-98156d4ef73c",
  "type": "Microsoft.Authorization/policyDefinitions",
  "properties": {
    "displayName": "Deploy Azure Security Center Vulnerability Assessment extension if does not exist",
    "mode": "Indexed",
    "description": "This policy deploy vulnerability assessment agent AzureSecurityCenter to Virtual Machine deployed from Shared Gallery Image.",
    "metaData": {
      "category": "Security",
      "version": "1.0.0"
    },
    "parameters": {
      "galleryRGName": {
        "type": "String",
        "metadata": {
          "description": "Shared Image Gallery resourceGroup name ",
          "displayName": "Image Gallery RG name"
        }
      },
      "galleryName": {
        "type": "String",
        "metadata": {
          "description": "Shared Image Gallery resourceGroup name ",
          "displayName": "Image Gallery name"
        }
      },
      "imageDefinitionName": {
        "type": "String",
        "metadata": {
          "description": "Shared Image Gallery resourceGroup name ",
          "displayName": "Image Definition name"
        }
      },
      "imageVersion": {
        "type": "String",
        "metadata": {
          "description": "Shared Image Gallery resourceGroup name ",
          "displayName": "Image Version(Name)"
        }
      },
      "deplomentApiVersion": {
        "type": "String",
        "metadata": {
          "description": "ASC Vulnerability assesment API version",
          "displayName": "ASC Resource Provider Api Version"
        },
        "defaultValue": "2015-06-01-preview"
      },
      "effect": {
        "allowedValues": [
          "DeployIfNotExists",
          "AuditIfNotExists",
          "Disabled"
        ],
        "defaultValue": "DeployIfNotExists",
        "type": "string",
        "metaData": {
          "description": "DeployIfNotExists, AuditIfNotExists or Disable the execution of the Policy",
          "displayName": "Policy effect"
        }
      }
    },
    "policyRule": {
      "if": {
        "allOf": [
          {
            "field": "type",
            "equals": "Microsoft.Compute/virtualMachines"
          },
          {
            "field": "Microsoft.Compute/virtualMachines/storageProfile.imageReference.id",
            "contains": "[concat('resourceGroups/',parameters('galleryRGName'),'/providers/Microsoft.Compute/galleries/',parameters('galleryName'),'/images/',parameters('imageDefinitionName'),'/versions/',parameters('imageVersion'))]"
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]",
        "details": {
          "type": "Microsoft.Compute/virtualMachines/extensions",
          "roleDefinitionIds": [
            "/providers/microsoft.authorization/roleDefinitions/b24988ac-6180-42a0-ab88-20f7382dd24c"
          ],
          "existenceCondition": {
            "allOf": [
              {
                "field": "Microsoft.Compute/virtualMachines/extensions/type",
                "like": "*.AzureSecurityCenter"
              },
              {
                "field": "Microsoft.Compute/virtualMachines/extensions/provisioningState",
                "like": "Succeeded"
              },
              {
                "field": "Microsoft.Compute/virtualMachines/extensions/publisher",
                "equals": "Qualys"
              }
            ]
          },
          "deployment": {
            "properties": {
              "mode": "incremental",
              "template": {
                "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
                "contentVersion": "1.0.0.0",
                "parameters": {
                  "vmName": {
                    "type": "string"
                  },
                  "apiVersionByEnv": {
                    "type": "string"
                  }
                },
                "resources": [
                  {
                    "type": "Microsoft.Compute/virtualMachines/providers/serverVulnerabilityAssessments",
                    "name": "[concat(parameters('vmName'), '/Microsoft.Security/default')]",
                    "apiVersion": "[parameters('apiVersionByEnv')]"
                  }
                ],
                "outputs": {
                  "policy": {
                    "type": "string",
                    "value": "[concat('Enabled extension for: ', parameters('vmName'))]"
                  }
                }
              },
              "parameters": {
                "vmName": {
                  "value": "[field('name')]"
                },
                "galleryRGName": {
                  "value": "[parameters('galleryRGName')]"
                },
                "galleryName": {
                  "value": "[parameters('galleryName')]"
                },
                "imageDefinitionName": {
                  "value": "[parameters('imageDefinitionName')]"
                },
                "imageVersion": {
                  "value": "[parameters('imageVersion')]"
                },
                "deplomentApiVersion": {
                  "value": "[parameters('deplomentApiVersion')]"
                }
              }
            }
          }
        }
      }
    }
  }
}
