{
  "name": "fe506338-e648-4e03-a69a-a5770349d747",
  "type": "Microsoft.Authorization/policyDefinitions",
  "properties": {
    "displayName": "remote-debugging-off-for-web-apps-deny",
    "mode": "Indexed",
    "description": "Policy description.",
    "metaData": {
      "category": "remote-debugging-off-for-web-apps",
      "version": "1.0.0"
    },
    "parameters": {
      "effect": {
        "type": "String",
        "metadata": {
          "displayName": "Effect",
          "description": "Enable or disable the execution of the policy"
        },
        "allowedValues": [
          "Deny",
          "Disabled"
        ],
        "defaultValue": "Deny"
      }
    },
    "policyRule": {
      "if": {
        "allOf": [
          {
            "field": "type",
            "equals": "Microsoft.Web/sites"
          },
          {
            "field": "Microsoft.Web/sites/siteConfig.remoteDebuggingEnabled",
            "equals": "true"
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]"
      }
    }
  }
}
