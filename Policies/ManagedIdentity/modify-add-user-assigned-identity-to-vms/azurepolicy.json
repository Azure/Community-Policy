{
  "name": "d47ff57c-8479-4dea-b0c8-5d57b55eab69",
  "type": "Microsoft.Authorization/policyDefinitions",
  "properties": {
    "displayName": "Add user-assigned managed identity to virtual machines.",
    "mode": "Indexed",
    "description": "This policy adds a user-assigned managed identity to virtual machines.",
    "metaData": {
      "category": "ManagedIdentity",
      "version": "1.0.0"
    },
    "parameters": {
      "userAssignedManagedIdentityResourceID": {
        "type": "string",
        "metadata": {
          "displayName": "UAMI Resource ID",
          "description": "Resource ID for the User Assigned Managed Identity. Example: /subscriptions/xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx/resourcegroups/uami-rg/providers/microsoft.managedidentity/userassignedidentities/uami"
        }
      },
      "effect": {
        "allowedValues": [
          "Modify",
          "Deny",
          "Audit",
          "Disabled"
        ],
        "defaultValue": "Modify",
        "type": "string",
        "metaData": {
          "description": "Modify, Deny, Audit or Disable the execution of the Policy",
          "displayName": "Policy effect"
        }
      }
    },
    "policyRule": {
      "if": {
        "allOf": [
          {
            "field": "type",
            "equals": "Microsoft.Compute/virtualMachines"
          },
          {
            "value": "[requestContext().apiVersion]",
            "greaterOrEquals": "2018-10-01"
          },
          {
            "anyOf": [
              {
                "field": "identity.type",
                "exists": "false"
              },
              {
                "field": "identity.type",
                "equals": "None"
              }
            ]
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]",
        "details": {
          "roleDefinitionIds": [
            "/providers/microsoft.authorization/roleDefinitions/b24988ac-6180-42a0-ab88-20f7382dd24c"
          ],
          "operations": [
            {
              "operation": "addOrReplace",
              "field": "identity.type",
              "value": "userAssigned"
            },
            {
              "operation": "addOrReplace",
              "field": "identity.userAssignedIdentities",
              "value": {
                "[parameters('userAssignedManagedIdentityResourceID')]": {}
              }
            }
          ]
        }
      }
    }
  }
}
