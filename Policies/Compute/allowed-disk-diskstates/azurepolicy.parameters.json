{
    "effect": {
        "type": "string",
        "metadata": {
            "displayName": "Effects",
            "description": "Enable or disable the execution of the Policy"
        },
        "allowedValues": [
            "Audit",
            "Deny",
            "Disabled"
        ],
        "defaultValue": "Audit"
    },
    "disallowedState": {
        "type": "array",
        "metadata": {
            "displayName": "Disallowed disk state",
            "description": "Controls what disk states are disallowed. Described at https://learn.microsoft.com/en-us/rest/api/compute/disks/get?tabs=HTTP#diskstate"
        },
        "allowedValues": [
            "ActiveSAS",
            "ActiveSASFrozen",
            "ActiveUpload",
            "Attached",
            "Frozen",
            "ReadyToUpload",
            "Reserved",
            "Unattached"
        ],
        "defaultValue": [
            "ActiveSAS",
            "ActiveSASFrozen"
        ]
    }
}