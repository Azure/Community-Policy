{
  "name": "c553ba49-3be2-4334-ad40-6f451cc319cd",
  "type": "Microsoft.Authorization/policyDefinitions",
  "properties": {
    "displayName": "Configure managed disks to disable public access",
    "mode": "indexed",
    "description": "Policy description.",
    "metaData": {
      "category": "Compute",
      "version": "1.0.0"
    },
    "parameters": {
      "effect": {
        "type": "String",
        "metadata": {
          "description": "Enable or disable the execution of the policy",
          "displayName": "Effect"
        },
        "allowedValues": [
          "deny",
          "audit",
          "disabled",
          "modify"
        ],
        "defaultValue": "modify"
      },
      "networkAccessPolicy": {
        "type": "String",
        "metadata": {
          "description": "Value for networkAccessPolicy",
          "displayName": "Value for networkAccessPolicy"
        },
        "allowedValues": [
          "DenyAll",
          "AllowPrivate"
        ],
        "defaultValue": "DenyAll"
      }
    },
    "policyRule": {
      "if": {
        "allOf": [
          {
            "equals": "Microsoft.Compute/disks",
            "field": "type"
          },
          {
            "field": "Microsoft.Compute/disks/networkAccessPolicy",
            "notEquals": "[parameters('networkAccessPolicy')]"
          }
        ]
      },
      "then": {
        "details": {
          "conflictEffect": "deny",
          "operations": [
            {
              "field": "Microsoft.Compute/disks/networkAccessPolicy",
              "operation": "addOrReplace",
              "value": "[parameters('networkAccessPolicy')]"
            }
          ],
          "roleDefinitionIds": [
            "/providers/Microsoft.Authorization/roleDefinitions/b24988ac-6180-42a0-ab88-20f7382dd24c"
          ]
        },
        "effect": "[parameters('effect')]"
      }
    }
  }
}
