{
  "name": "b6ecf5fe-d316-491a-ba31-6f42bbf35251",
  "type": "Microsoft.Authorization/policyDefinitions",
  "properties": {
    "displayName": "only_approved_vmss_extensions_should_be_installed",
    "mode": "indexed",
    "description": "Policy description.",
    "metaData": {
      "category": "Compute",
      "version": "1.0.0"
    },
    "parameters": {
      "approvedExtensions": {
        "type": "Array",
        "metadata": {
          "description": "The list of approved extension types that can be installed. Example: AzureDiskEncryption",
          "displayName": "Approved extensions"
        }
      },
      "effect": {
        "type": "String",
        "metadata": {
          "description": "The effect determines what happens when the policy rule is evaluated to match",
          "displayName": "Effect"
        },
        "allowedValues": [
          "Audit",
          "Deny",
          "Disabled"
        ],
        "defaultValue": "Audit"
      }
    },
    "policyRule": {
      "if": {
        "anyOf": [
          {
            "allOf": [
              {
                "equals": "Microsoft.Compute/virtualMachineScaleSets/extensions",
                "field": "type"
              },
              {
                "field": "Microsoft.Compute/virtualMachineScaleSets/extensions/type",
                "notIn": "[parameters('approvedExtensions')]"
              }
            ]
          },
          {
            "allOf": [
              {
                "field": "Microsoft.Compute/virtualMachineScaleSets/virtualMachineProfile.extensionProfile.extensions[*].type",
                "notIn": "[parameters('approvedExtensions')]"
              },
              {
                "exists": true,
                "field": "Microsoft.Compute/virtualMachineScaleSets/virtualMachineProfile.extensionProfile.extensions[*].type"
              }
            ]
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]"
      }
    }
  }
}
