{
  "name": "87de6b57-1d21-4035-9fd1-5be7a04a39fd",
  "type": "Microsoft.Authorization/policyDefinitions",
  "properties": {
    "displayName": "Deny hybrid use benefit",
    "mode": "indexed",
    "description": "This policy will deny usage of hybrid use benefit.",
    "metaData": {
      "category": "Compute",
      "version": "1.0.0"
    },
    "parameters": {
      "effect": {
        "allowedValues": [
          "Deny",
          "Audit",
          "Disabled"
        ],
        "defaultValue": "Deny",
        "type": "string",
        "metaData": {
          "description": "Deny, Audit or Disable the execution of the Policy",
          "displayName": "Policy effect"
        }
      }
    },
    "policyRule": {
      "if": {
        "allOf": [
          {
            "field": "type",
            "in": [
              "Microsoft.Compute/virtualMachines",
              "Microsoft.Compute/VirtualMachineScaleSets"
            ]
          },
          {
            "field": "Microsoft.Compute/licenseType",
            "equals": "Windows_Server"
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]"
      }
    }
  }
}