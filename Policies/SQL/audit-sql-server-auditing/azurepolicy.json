{
  "name": "f7889fb7-3feb-4a62-b0ef-98b1f11d44cb",
  "type": "Microsoft.Authorization/policyDefinitions",
  "properties": {
    "displayName": "Audit SQL server level Auditing settings",
    "mode": "indexed",
    "description": "Audits the existence of SQL Auditing at the server level",
    "metaData": {
      "category": "SQL",
      "version": "1.0.0"
    },
    "parameters": {
      "effect": {
        "allowedValues": [
          "AuditIfNotExists",
          "Disabled"
        ],
        "defaultValue": "AuditIfNotExists",
        "type": "string",
        "metaData": {
          "description": "AuditIfNotExists or Disable the execution of the Policy",
          "displayName": "Policy effect"
        }
      }
    },
    "policyRule": {
      "if": {
        "field": "type",
        "equals": "Microsoft.Sql/servers"
      },
      "then": {
        "effect": "[parameters('effect')]",
        "details": {
          "type": "Microsoft.Sql/servers/auditingSettings",
          "name": "default",
          "existenceCondition": {
            "field": "Microsoft.Sql/auditingSettings.state",
            "equals": "Enabled"
          }
        }
      }
    }
  }
}
