{
  "name": "1f2ea9e7-bff0-4561-99b7-2ef1c8086ed7",
  "type": "Microsoft.Authorization/policyDefinitions",
  "properties": {
    "displayName": "Name pattern with match condition.",
    "mode": "Indexed",
    "description": "Enforce a naming pattern on resources with the match condition.",
    "metaData": {
      "category": "Naming",
      "version": "1.0.0"
    },
    "parameters": {
      "namePattern": {
        "type": "String",
        "metadata": {
          "description": "Pattern to use for names. Can include ? for letters and # for numbers."
        }
      },
      "effect": {
        "allowedValues": [
          "Deny",
          "Audit",
          "Disabled"
        ],
        "defaultValue": "Deny",
        "type": "string",
        "metaData": {
          "description": "Deny, Audit or Disable the execution of the Policy",
          "displayName": "Policy effect"
        }
      }
    },
    "policyRule": {
      "if": {
        "not": {
          "field": "name",
          "match": "[parameters('namePattern')]"
        }
      },
      "then": {
        "effect": "[parameters('effect')]"
      }
    }
  }
}
