{
  "name": "4f6d5a92-8856-4ec3-be14-7628c4230376",
  "type": "Microsoft.Authorization/policyDefinitions",
  "properties": {
    "displayName": "Enforce lb private ip addresses only in frontend configuration",
    "mode": "indexed",
    "description": "Policy description.",
    "metaData": {
      "category": "LoadBalancer",
      "version": "1.0.0"
    },
    "parameters": {
      "effect": {
        "type": "String",
        "metadata": {
          "description": "Enable or disable the execution of the policy",
          "displayName": "Effect"
        },
        "allowedValues": [
          "Audit",
          "Deny",
          "Disabled"
        ],
        "defaultValue": "Deny"
      }
    },
    "policyRule": {
      "if": {
        "allOf": [
          {
            "equals": "Microsoft.Network/loadBalancers",
            "field": "type"
          },
          {
            "anyOf": [
              {
                "exists": false,
                "field": "Microsoft.Network/loadBalancers/frontendIPConfigurations[*].subnet"
              },
              {
                "exists": true,
                "field": "Microsoft.Network/loadBalancers/frontendIPConfigurations[*].publicIPAddress"
              },
              {
                "exists": true,
                "field": "Microsoft.Network/loadBalancers/frontendIPConfigurations[*].publicIPPrefix"
              }
            ]
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]"
      }
    }
  }
}
