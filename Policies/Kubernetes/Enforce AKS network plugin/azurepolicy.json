{
  "name": "2837c2be-633a-4938-a903-bcf7af386569",
  "type": "Microsoft.Authorization/policyDefinitions",
  "properties": {
    "displayName": "Enforce AKS network plugin",
    "mode": "indexed",
    "description": "Policy description.",
    "metaData": {
      "category": "Kubernetes",
      "version": "1.0.0"
    },
    "parameters": {
      "effect": {
        "type": "String",
        "metadata": {
          "description": "Enable or disable the execution of the policy",
          "displayName": "Effect"
        },
        "allowedValues": [
          "Audit",
          "Deny",
          "Disabled"
        ],
        "defaultValue": "Deny"
      },
      "networkPlugin": {
        "type": "String",
        "metadata": {
          "description": "The network plugin used for building Kubernetes network.",
          "displayName": "Network Plugin"
        },
        "defaultValue": "azure"
      }
    },
    "policyRule": {
      "if": {
        "allOf": [
          {
            "equals": "Microsoft.ContainerService/managedClusters",
            "field": "type"
          },
          {
            "field": "Microsoft.ContainerService/managedClusters/networkProfile.networkPlugin",
            "notEquals": "[parameters('networkPlugin')]"
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]"
      }
    }
  }
}
