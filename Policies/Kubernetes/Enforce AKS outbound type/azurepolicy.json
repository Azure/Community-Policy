{
  "name": "d473321e-10d6-4584-8064-0b3d78dd0a8f",
  "type": "Microsoft.Authorization/policyDefinitions",
  "properties": {
    "displayName": "Enforce AKS outbound type",
    "mode": "indexed",
    "description": "Policy description.",
    "metaData": {
      "category": "Kubernetes",
      "version": "1.0.0"
    },
    "parameters": {
      "OutboundType": {
        "type": "String",
        "metadata": {
          "description": "The outbound (egress) routing method.",
          "displayName": "Outbound Type"
        },
        "allowedValues": [
          "loadBalancer",
          "userDefinedRouting"
        ],
        "defaultValue": "userDefinedRouting"
      },
      "effect": {
        "type": "String",
        "metadata": {
          "description": "Enable or disable the execution of the policy",
          "displayName": "Effect"
        },
        "allowedValues": [
          "Audit",
          "Deny",
          "Disabled"
        ],
        "defaultValue": "Deny"
      }
    },
    "policyRule": {
      "if": {
        "allOf": [
          {
            "equals": "Microsoft.ContainerService/managedClusters",
            "field": "type"
          },
          {
            "field": "Microsoft.ContainerService/managedClusters/networkProfile.outboundType",
            "notEquals": "[parameters('outboundType')]"
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]"
      }
    }
  }
}
