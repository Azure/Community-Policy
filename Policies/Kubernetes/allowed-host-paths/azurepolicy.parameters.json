{
  "effect": {
    "type": "String",
    "metadata": {
      "displayName": "Effect",
      "description": "Enable or disable the execution of the policy"
    },
    "allowedValues": [
      "audit",
      "deny",
      "disabled"
    ],
    "defaultValue": "audit"
  },
  "excludedNamespaces": {
    "type": "Array",
    "metadata": {
      "displayName": "Namespace exclusions",
      "description": "List of Kubernetes namespaces to exclude from policy evaluation."
    },
    "defaultValue": [
      "kube-system",
      "gatekeeper-system",
      "azure-arc"
    ]
  },
  "allowedHostPaths": {
    "type": "Object",
    "metadata": {
      "displayName": "Allowed host paths",
      "description": "Configure what hostPaths are valid for volumes to use. An empty list means there is no restriction on host paths used.",
      "schema": {
        "type": "object",
        "properties": {
          "paths": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "pathPrefix": {
                  "type": "string"
                },
                "readOnly": {
                  "type": "boolean"
                }
              },
              "required": [
                "pathPrefix",
                "readOnly"
              ],
              "additionalProperties": false
            }
          }
        },
        "required": [
          "paths"
        ],
        "additionalProperties": false
      }
    },
    "defaultValue": {
      "paths": [
        {
          "pathPrefix": "/dev/null",
          "readOnly": true
        }
      ]
    }
  }
}
