{
  "name": "1cb244e5-5748-461a-8f61-8889ff30183c",
  "type": "Microsoft.Authorization/policyDefinitions",
  "properties": {
    "displayName": "AKS prevent node public ip",
    "mode": "indexed",
    "description": "Policy description.",
    "metaData": {
      "category": "Kubernetes",
      "version": "1.0.0"
    },
    "parameters": {
      "effect": {
        "type": "String",
        "metadata": {
          "description": "Enable or disable the execution of the policy",
          "displayName": "Effect"
        },
        "allowedValues": [
          "Audit",
          "Deny",
          "Disabled"
        ],
        "defaultValue": "Deny"
      }
    },
    "policyRule": {
      "if": {
        "allOf": [
          {
            "equals": "Microsoft.ContainerService/managedClusters",
            "field": "type"
          },
          {
            "count": {
              "field": "Microsoft.ContainerService/managedClusters/agentPoolProfiles[*]",
              "where": {
                "anyOf": [
                  {
                    "exists": "False",
                    "field": "Microsoft.ContainerService/managedClusters/agentPoolProfiles[*].enableNodePublicIP"
                  },
                  {
                    "equals": "true",
                    "field": "Microsoft.ContainerService/managedClusters/agentPoolProfiles[*].enableNodePublicIP"
                  }
                ]
              }
            },
            "greater": 0
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]"
      }
    }
  }
}
