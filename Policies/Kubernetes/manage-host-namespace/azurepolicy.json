{
  "properties": {
    "displayName": "Do not allow sharing of host process ID and IPC namespaces in a Kubernetes Cluster",
    "policyType": "Custom",
    "mode": "Microsoft.Kubernetes.Data",
    "description": "This policy blocks pod containers from sharing the host process ID namespace and IPC namespace in a Kubernetes cluster. For instructions on using this policy, please visit https://aka.ms/kubepolicydoc/.",
    "metadata": {
      "version": "1.0.0-preview",
      "category": "Kubernetes PSP",
      "preview": true
    },
    "parameters": {
      "effect": {
        "type": "String",
        "metadata": {
          "displayName": "Effect",
          "description": "Enable or disable the execution of the policy"
        },
        "allowedValues": [
          "audit",
          "deny",
          "disabled"
        ],
        "defaultValue": "audit"
      },
      "excludedNamespaces": {
        "type": "Array",
        "metadata": {
          "displayName": "Namespace exclusions",
          "description": "List of Kubernetes namespaces to exclude from policy evaluation. Providing a value for this parameter is optional."
        },
        "defaultValue": ["kube-system", "gatekeeper-system", "azure-arc"]
      },
      "allowedHostPID": {
        "type": "Boolean",
        "metadata": {
          "displayName": "Allow Host Process ID",
          "description": "Allow pods to use the Host Process ID"
        },
        "defaultValue": false
      },
      "allowedHostIPC": {
        "type": "Boolean",
        "metadata": {
          "displayName": "Allow Host IPC",
          "description": "Allow pods to use the Host IPC"
        },
        "defaultValue": false
      }
    },
    "policyRule": {
      "if": {
        "field": "type",
        "in": [
          "AKS Engine",
          "Microsoft.Kubernetes/connectedClusters",
          "Microsoft.ContainerService/managedClusters"
        ]
      },
      "then": {
        "effect": "[parameters('effect')]",
        "details": {
          "constraintTemplate": "https://raw.githubusercontent.com/Azure/Community-Policy/master/Policies/Kubernetes/manage-host-namespace/template.yaml",
          "constraint": "https://raw.githubusercontent.com/Azure/Community-Policy/master/Policies/Kubernetes/manage-host-namespace/constraint.yaml",
          "values": {
            "excludedNamespaces": "[parameters('excludedNamespaces')]",
            "allowedHostPID": "[parameters('allowedHostPID')]",
            "allowedHostIPC": "[parameters('allowedHostIPC')]"
          }
        }
      }
    }
  }
}
