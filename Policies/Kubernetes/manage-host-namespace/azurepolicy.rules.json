{
  "if": {
    "field": "type",
    "in": [
      "AKS Engine",
      "Microsoft.Kubernetes/connectedClusters",
      "Microsoft.ContainerService/managedClusters"
    ]
  },
  "then": {
    "effect": "[parameters('effect')]",
    "details": {
      "constraintTemplate": "https://raw.githubusercontent.com/Azure/Community-Policy/master/Policies/Kubernetes/manage-host-namespace/template.yaml",
      "constraint": "https://raw.githubusercontent.com/Azure/Community-Policy/master/Policies/Kubernetes/manage-host-namespace/constraint.yaml",
      "values": {
        "excludedNamespaces": "[parameters('excludedNamespaces')]",
        "allowedHostPID": "[parameters('allowedHostPID')]",
        "allowedHostIPC": "[parameters('allowedHostIPC')]"
      }
    }
  }
}
