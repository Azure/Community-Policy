{
  "name": "08aa5548-711b-4f45-99be-53a0cbba31f9",
  "type": "Microsoft.Authorization/policyDefinitions",
  "properties": {
    "displayName": "Virtual Machine NIC must have NSG",
    "mode": "indexed",
    "description": "Policy description.",
    "metaData": {
      "category": "Network",
      "version": "1.0.0"
    },
    "parameters": {
      "effect": {
        "type": "string",
        "metadata": {
          "description": "set the execution effect of the policy",
          "displayName": "Effect"
        },
        "allowedValues": [
          "deny",
          "audit",
          "disabled"
        ],
        "defaultValue": "deny"
      }
    },
    "policyRule": {
      "if": {
        "allOf": [
          {
            "equals": "Microsoft.Network/networkInterfaces",
            "field": "type"
          },
          {
            "exists": "false",
            "field": "Microsoft.Network/networkInterfaces/networkSecurityGroup.id"
          },
          {
            "exists": "true",
            "field": "Microsoft.Network/networkInterfaces/virtualMachine.id"
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]"
      }
    }
  }
}
