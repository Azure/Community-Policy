{
  "name": "60a95b36-07f0-4a7d-a740-e7e7c17b3c48",
  "type": "Microsoft.Authorization/policyDefinitions",
  "properties": {
    "displayName": "deny-app-gateways-cant-have-private-listener",
    "mode": "All",
    "description": "Policy description.",
    "metaData": {
      "category": "Network",
      "version": "1.0.0"
    },
    "parameters": {
      "effect": {
        "allowedValues": [
          "Deny",
          "Audit",
          "Disabled"
        ],
        "defaultValue": "Deny",
        "type": "string",
        "metaData": {
          "description": "Deny, Audit or Disable the execution of the Policy",
          "displayName": "Policy effect"
        }
      }
    },
    "policyRule": {
      "if": {
        "allOf": [
          {
            "field": "type",
            "equals": "Microsoft.Network/applicationGateways"
          },
          {
            "count": {
              "field": "Microsoft.Network/applicationGateways/frontendIPConfigurations[*]",
              "where": {
                "field": "Microsoft.Network/applicationGateways/frontendIPConfigurations[*].subnet.id",
                "like": "*"
              }
            },
            "greater": 0
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]"
      }
    }
  }
}
