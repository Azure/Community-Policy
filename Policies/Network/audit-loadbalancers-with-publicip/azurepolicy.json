{
  "name": "audit-loadbalancers-with-publicip",
  "type": "Microsoft.Authorization/policyDefinitions",
  "properties": {
    "displayName": "Audit loadbalancers with public ip",
    "mode": "indexed",
    "description": "This policy audits if loadbalancers exists with public ip.",
    "metaData": {
      "category": "Network",
      "version": "1.0.0"
    },
    "parameters": {
      "effect": {
        "allowedValues": [
          "Audit",
          "Disabled"
        ],
        "defaultValue": "Audit",
        "type": "string",
        "metaData": {
          "description": "Audit or Disable the execution of the Policy",
          "displayName": "Policy effect"
        }
      }
    },
    "policyRule": {
      "if": {
        "allOf": [
          {
            "field": "type",
            "equals": "Microsoft.Network/loadBalancers"
          },
          {
            "field": "Microsoft.Network/loadBalancers/frontendIPConfigurations[*].subnet.id",
            "notLike": "*"
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]"
      }
    }
  }
}
