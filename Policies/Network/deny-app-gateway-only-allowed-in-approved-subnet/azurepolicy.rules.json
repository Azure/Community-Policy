{
    "if": {
        "allOf": [
            {
                "field": "type",
                "equals": "Microsoft.Network/applicationGateways"
            },
            {
                "field": "Microsoft.Network/applicationGateways/gatewayIPConfigurations[*].subnet.id",
                "notContains": "[parameters('allowedSubnetName')]"
            }
        ]
    },
    "then": {
        "effect": "deny"
    }
}